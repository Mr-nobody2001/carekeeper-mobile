<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.carekeeper.ui.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_nav_emergency_contacts"
            app:destination="@id/nav_emergency_contacts" />
    </fragment>

    <fragment
        android:id="@+id/nav_emergency_contacts"
        android:name="com.example.carekeeper.ui.emergency.EmergencyContactsFragment"
        android:label="Contatos de Emergência" />

    <fragment
        android:id="@+id/nav_panic"
        android:name="com.example.carekeeper.ui.panic.PanicButtonFragment"
        android:label="Pânico" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.carekeeper.ui.settings.SettingsFragment"
        android:label="Configurações" >

        <action
            android:id="@+id/action_settings_to_login"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>
