<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="?attr/bgEmergencyItem"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imageViewEmergencyIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/cone"
        android:src="@drawable/ic_police_car"
        android:layout_marginEnd="24dp" />

    <TextView
        android:id="@+id/textViewEmergencyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pol_cia"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textColor="?android:attr/textColorPrimary" />
</LinearLayout>
