<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panic_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    tools:context=".ui.panic.PanicButtonFragment">

    <com.example.carekeeper.ui.panic.CircularProgressView
        android:id="@+id/circularProgress"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/panicButton"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_panic_button_ripple"
        android:text="@string/p_nico"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true" />

    <View
        android:id="@+id/rippleWave"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_ripple_wave"
        android:visibility="gone" />

</FrameLayout>
