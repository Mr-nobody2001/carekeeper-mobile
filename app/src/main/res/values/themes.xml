<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Theme.Carekeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#1565C0</item>
        <item name="colorPrimaryVariant">#1565C0</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:textColorPrimary">#112233</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">#2E7D32</item>
        <item name="colorSecondaryVariant">#2E7D32</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Background colors -->
        <item name="android:windowBackground">#F7F9FC</item>
        <item name="colorSurface">#FFFFFF</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Emergency item background (mantido) -->
        <item name="bgEmergencyItem">@drawable/bg_item_emergency</item>

        <!-- Typography defaults -->
        <item name="android:fontFamily">Roboto, sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Carekeeper.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.Carekeeper.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">Roboto, sans-serif</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Carekeeper.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">Roboto, sans-serif</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Carekeeper.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">Roboto, sans-serif</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Carekeeper.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">Roboto, sans-serif</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">30sp</item>
    </style>

    <style name="Theme.Carekeeper.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Carekeeper.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
