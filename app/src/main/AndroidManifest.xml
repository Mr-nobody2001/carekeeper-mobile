<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ðŸ”’ Recursos de hardware opcionais -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- ðŸŒ PermissÃµes de rede -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- ðŸ“ LocalizaÃ§Ã£o -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- âš™ï¸ ServiÃ§os em foreground -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- ðŸ“³ VibraÃ§Ã£o e chamadas -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <!-- ðŸªŸ PermissÃ£o para exibir janelas sobre outros apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Carekeeper"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- ðŸš€ Atividade principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:resizeableActivity="true"
            android:theme="@style/Theme.Carekeeper.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸš¨ Popup de confirmaÃ§Ã£o de acidente -->
        <activity
            android:name=".ui.AccidentPopupActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Dialog.Alert"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:windowSoftInputMode="stateHidden"
            android:finishOnTaskLaunch="true"
            android:screenOrientation="portrait" />

        <!-- âš™ï¸ ServiÃ§o de sensores -->
        <service
            android:name=".service.SensorService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- ðŸ“³ ServiÃ§o opcional de vibraÃ§Ã£o -->
        <service
            android:name=".service.VibrationService"
            android:enabled="true"
            android:exported="false" />

        <!-- ðŸ“¡ Receiver que escuta o broadcast de acidente detectado -->
        <receiver
            android:name=".receiver.AccidentReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BROADCAST_STICKY">
            <intent-filter>
                <action android:name="com.example.carekeeper.ACCIDENT_DETECTED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
